<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:id="@+id/login_page_register_page"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="4dp"
        android:elevation="4dp"
        android:layout_gravity="top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_palet_background_shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp">
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/register_palet_background_design"
        android:elevation="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="4dp"
                android:layout_height="match_parent"></LinearLayout>

            <TextView
                android:layout_marginLeft="14dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:id="@+id/register"
                android:text="Register"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutmain"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfilePicture1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_launcher_background" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_toRightOf="@+id/imgProfilePicture1"
                android:id="@+id/btnChoosePicture1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_palet_button_pic"
                android:textSize="10dp"
                android:textColor="@color/colorAccent"
                android:text="Choose Picture"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/edtNameSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:textColorHint="#7f8c8d" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/edtEmailSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#7f8c8d" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/edtPasswordSignup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="#7f8c8d" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="#7f8c8d" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:padding="20dp"
                android:id="@+id/spinnerColleges"
                android:layout_height="wrap_content" />


            <FrameLayout
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:layout_width="154dp"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:background="@drawable/register_palet_button_pic"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:elevation="18dp"
                    android:text="Register"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <!--
            <Button
                android:onClick="registerNewAccount"
                android:text="Register"
                android:id="@+id/student_new_login"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>-->

        </LinearLayout>

    </LinearLayout>
</LinearLayout>