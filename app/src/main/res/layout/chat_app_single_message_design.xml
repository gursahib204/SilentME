<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <LinearLayout
        android:minWidth="80dp"
        android:id="@+id/layout_sender"
        android:background="@drawable/chat_our_msg_send"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:elevation="2dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#e6e6e6"
                android:id="@+id/chat_single_list_my_time"
                android:fontFamily="monospace"
                android:textSize="10dp"
                android:gravity="right"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:text="12:4 AM"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat_single_list_my_msg"
                android:layout_alignEnd="@+id/chat_single_list_my_msg" />
            <!--<ImageView
                android:layout_gravity="center_vertical"
                android:background="@drawable/error_icon"
                android:layout_width="40dp"
                android:layout_height="10dp" />-->
        </LinearLayout>
        <TextView
            android:id="@+id/chat_single_list_my_msg"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:text="Hi this is sanjuHi this is sanju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_me"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:elevation="2dp"
        android:minWidth="80dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:background="@drawable/chat_sender_msg_send_design"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#565656"
                android:id="@+id/chat_single_list_sender_time"
                android:fontFamily="monospace"
                android:textSize="10dp"
                android:gravity="right"
                android:paddingRight="20dp"
                android:paddingTop="4dp"
                android:text="12:4 AM"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat_single_list_my_msg"
                android:layout_alignEnd="@+id/chat_single_list_my_msg" />
            <!--<ImageView
                android:layout_gravity="center_vertical"
                android:background="@drawable/error_icon"
                android:layout_width="40dp"
                android:layout_height="10dp" />-->
        </LinearLayout>
        <TextView
            android:id="@+id/chat_single_list_sender_msg"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textColor="#434343"
            android:textSize="16dp"
            android:text="Hi this is sanjuHi this is sanju"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>